{
    "name": "@funkyoz/react-chat",
    "version": "1.0.4",
    "type": "module",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite",
        "prebuild": "tsc -b ./tsconfig.lib.json",
        "build": "vite build",
        "prebuild:watch": "tsc -b ./tsconfig.lib.json --watch",
        "build:watch": "vite build --watch",
        "preview": "vite preview",
        "prepublishOnly": "npm run build",
        "lint": "prettier -w ./**/*.{ts,tsx,js,jsx}",
        "tests:lint": "prettier -c ./**/*.{ts,tsx,js,jsx}",
        "tests:types": "eslint . && tsc -b ./tsconfig.lib.json",
        "tests:unit": "vitest",
        "tests": "npm run tests:lint && npm run tests:types && npm run tests:unit",
        "tests:coverage": "vitest run --coverage"
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-markdown": "^9.0.1",
        "react-syntax-highlighter": "^15.6.1",
        "styled-components": "^6.1.13"
    },
    "devDependencies": {
        "@eslint/js": "^9.16.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@types/node": "^22.10.1",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^2.1.8",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.16.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.12.0",
        "jsdom": "^25.0.1",
        "prettier": "3.4.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-markdown": "^9.0.1",
        "react-syntax-highlighter": "^15.6.1",
        "styled-components": "^6.1.13",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.16.0",
        "vite": "^6.0.1",
        "vite-plugin-dts": "^4.3.0",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=18"
    },
    "sideEffect": [
        "**/*.css"
    ]
}
